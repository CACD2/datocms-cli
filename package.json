{
  "name": "root",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "format": "rome check packages --apply-suggested && rome format --write packages",
    "lint": "rome ci packages",
    "build": "lerna run build",
    "publish": "lerna run test && npm run build && lerna publish",
    "publish-next": "npm run build && lerna publish --dist-tag next"
  },
  "devDependencies": {
    "@oclif/test": "^2",
    "@types/chai": "^4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.9.4",
    "chai": "^4",
    "globby": "^11",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^13.1.0",
    "mocha": "^9",
    "oclif": "^3",
    "rimraf": "^3.0.2",
    "rome": "^11.0.0",
    "ts-node": "^10.2.1",
    "tslib": "^2.3.1",
    "typescript": "~4.5.0"
  },
  "version": "0.0.1",
  "lint-staged": {
    "packages/**/*.{js,jsx,ts,tsx}": [
      "rome ci"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "./node_modules/.bin/lint-staged"
    }
  }
}
